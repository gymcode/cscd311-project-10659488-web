<h3 style="margin-left: 20%">{{viewTitle}}</h3>

<form action="/studentRegister" method="POST" autocomplete="off">
   <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control  form-control-sm" placeholder="name" name="name" id="name" required
         style="border-top: none; border-left: none;  border-right: none; border-color: rgba(228, 194, 194, 0.856);"
        >
   </div>
     <div class="form-group">
        <label for="ID_num">Student ID:</label>
        <input type="text" class="form-control form-control-sm" placeholder="ID_number" name="studID" id="id_num" required
         style="border-top: none; border-left: none;  border-right: none; border-color: rgba(228, 194, 194, 0.856);"
        >
   </div>
   <div class="form-group">
        <label for="Gender">Gender:</label>
        <select name="gender" class="form-control form-control-sm" id="">
          <option value="">--select Gender--</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
   </div>
   <div class="form-group">
        <label for="Level">Level:</label>
         <input type="text" class="form-control form-control-sm" placeholder="Level" name="level" id="level" required
          style="border-top: none; border-left: none;  border-right: none; border-color: rgba(228, 194, 194, 0.856);"
         >
   </div>
   <div class="from-group">
        <label for="password">Student Pin:</label>
        <input type="password" class="form-control form-control-sm " placeholder="password" name="password" id="password" required
         style="border-top: none; border-left: none;  border-right: none; border-color: rgba(228, 194, 194, 0.856);"
        >
   </div><br>
   <div class="form-group">
       <button type="submit" style="margin-left: 30%; width:40%;   border-radius: 15px 50px 30px;" class="btn btn-primary" style="margin-left: 30%">Submit</button>
       <p><a href="/studentLogin" style="margin-left: 27%; text-decoration: none;color: #8a9199dc;">already registered? Click to login</a></p>
   </div>
</form>